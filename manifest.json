{
    "manifest_version": 3,
    "name": "Timer",
    "version": "1.0",
    "description": "Practice timer",
    "icons": {
        "16":"timer.png",
        "48":"timer.png",
        "128":"timer.png"
    },
    "action": {
        "default_icon": "timer.png",
        "default_title": "Timer",
        "default_popup": "popup/popup.html"
    },
    "permissions": ["storage", "alarms", "notifications"],
    "background": {
        "service_worker": "background.js"
    }
}